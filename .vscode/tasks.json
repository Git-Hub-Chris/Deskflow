{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cmake",
      "label": "build-all",
      "command": "build",
      "targets": ["all"],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "cmake",
      "label": "build-coverage",
      "command": "build",
      "targets": ["coverage"],
      "preset": "${command:cmake.activeBuildPresetName}",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "reinstall windows daemon",
      "type": "shell",
      "command": "python scripts/windows_daemon.py",
      "dependsOn": ["build-all"]
    }
  ]
}
